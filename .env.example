# ===========================================
# REQUIRED: Core AI Services
# ===========================================

# Groq - Used for speech transcription (Whisper) and text generation (Llama)
# https://console.groq.com/keys
GROQ_API_KEY=
# Optional: Groq voice ID for TTS (if using Groq for speech synthesis)
GROQ_VOICE_ID=
# Optional: Transcription format (wav or webm, defaults to wav)
GROQ_TRANSCRIPTION_FORMAT=wav

# Agent Core API - External AI service for processing
# Your AI agent service URL
NEXT_PUBLIC_AGENT_CORE_API=http://localhost:3030/api/v1

# ===========================================
# TEXT-TO-SPEECH PROVIDERS
# ===========================================

# Cartesia - Primary TTS provider (English)
# https://play.cartesia.ai/console
CARTESIA_API_KEY=
CARTESIA_VOICE_ID=

# ElevenLabs - Multi-language TTS provider
# https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
# Optional: ElevenLabs model (defaults to eleven_multilingual_v2)
ELEVENLABS_MODEL_NAME=eleven_multilingual_v2

# Minimax - Chinese TTS provider
# https://platform.minimax.io/console
MINIMAX_API_KEY=
MINIMAX_GROUP_ID=
# Optional: Minimax voice ID (defaults to male-qn-qingse)
MINIMAX_VOICE_ID=male-qn-qingse
# Optional: Minimax model (defaults to speech-02-hd)
MINIMAX_TTS_MODEL=speech-02-hd

# ===========================================
# OPTIONAL: Additional TTS Providers
# ===========================================

# Deepgram - Alternative TTS provider
# https://console.deepgram.com/
DEEPGRAM_API_KEY=

# Azure Speech Services - Microsoft TTS
# https://portal.azure.com/
AZURE_SPEECH_API_KEY=
# Optional: Azure voice ID (defaults to en-GB-OllieMultilingualNeural)
AZURE_TTS_VOICE_ID=en-GB-OllieMultilingualNeural

# ===========================================
# OPTIONAL: Advanced Configuration
# ===========================================

# Server Configuration
PORT=3000
LOG_LEVEL=info

# Agent Core Advanced Settings
AGENT_CORE_STREAM_TIMEOUT=30000
AGENT_CORE_MAX_RETRIES=3
AGENT_CORE_RETRY_DELAY=1000